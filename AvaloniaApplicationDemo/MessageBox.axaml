<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="200"
        Width="450" Height="200"
        x:Class="AvaloniaApplicationDemo.MessageBox"
        Title="MessageBox">
    <Grid RowDefinitions="*, Auto" Margin="10">
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Name="MessageTextBlock">This is a example message</TextBlock>
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" ColumnDefinitions="*, *, *" Background="DimGray">
            <Button Grid.Column="0" HorizontalAlignment="Stretch" Name="YesButton">
                <TextBlock HorizontalAlignment="Center">Yes</TextBlock>
            </Button>
            <Button Grid.Column="1" HorizontalAlignment="Stretch" Name="OkButton">
                <TextBlock HorizontalAlignment="Center">OK</TextBlock>
            </Button>
            <Button Grid.Column="2" HorizontalAlignment="Stretch" Name="CancelButton">
                <TextBlock HorizontalAlignment="Center">Cancel</TextBlock>
            </Button>
        </Grid>
    </Grid>
</Window>
